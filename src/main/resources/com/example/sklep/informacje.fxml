<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="586.0" prefWidth="784.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sklep.AdminPanelController">
    <children>
        <VBox layoutX="40.0" layoutY="40.0" spacing="10.0">
            <Label prefHeight="27.0" prefWidth="243.0" text="Zatwierdzanie użytkowników">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <ListView fx:id="userListView" prefHeight="300.0" prefWidth="400.0" />
            <Button fx:id="approveUserButton" onAction="#approveUserButtonClicked" prefHeight="30.0" prefWidth="236.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Zatwierdź wybranego użytkownika" />
            <Button fx:id="refreshButton" onAction="#refreshButtonClicked" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 150px; " text="Odmów dostępu" />
            <Button fx:id="logoutButton" onAction="#logoutButtonClicked" style="-fx-background-color: gray; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 150px; " text="Powrót" />
        </VBox>
    </children>
</AnchorPane>
